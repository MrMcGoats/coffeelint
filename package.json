{
  "name": "@coffeelint/cli",
  "description": "Lint your CoffeeScript",
  "version": "2.1.0",
  "homepage": "http://www.coffeelint.org",
  "keywords": [
    "lint",
    "coffeescript",
    "coffee-script"
  ],
  "author": "Matthew Perpick <clutchski@gmail.com>",
  "main": "./lib/coffeelint.js",
  "engines": {
    "npm": ">=1.3.7",
    "node": ">=6.9.1"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/coffeelint/coffeelint.git"
  },
  "bin": {
    "coffeelint": "./bin/coffeelint"
  },
  "dependencies": {
    "coffeescript": "2.4.1",
    "glob": "^7.1.6",
    "ignore": "^3.0.9",
    "optimist": "^0.6.1",
    "resolve": "^0.6.3",
    "strip-json-comments": "^1.0.2"
  },
  "devDependencies": {
    "browserify": "^16.5.0",
    "coffeeify": "^3.0.1",
    "vows": "^0.8.3",
    "underscore": "^1.9.2"
  },
  "license": "MIT",
  "scripts": {
    "pretest": "cake compile",
    "test": "node ./vowsrunner.js --spec test/*.coffee test/*.litcoffee",
    "testrule": "npm run compile && node ./vowsrunner.js --spec",
    "posttest": "npm run lint",
    "lint": "cake compile && node ./bin/coffeelint .",
    "lint-csv": "cake compile && ./bin/coffnode eelint --csv .",
    "lint-jslint": "cake compile && node ./bin/coffeelint --jslint .",
    "compile": "cake compile"
  }
}
